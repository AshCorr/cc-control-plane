os.loadAPI('apis/helpers')

local availableOS = fs.list('os/')

print('List of OS: ' .. table.concat(availableOS, ', '))
print('Select OS to install:')

local osToInstall = read()

if !(helpers.tableHasValue(availableOS, osToInstall)) then
    print(osToInstall .. ' does not exist. Goodbye!')
    return
end

settings.set("os", osToInstall)
